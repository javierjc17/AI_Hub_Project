<Window xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
        Title='Notificación' Height='220' Width='450' 
        WindowStyle='None' AllowsTransparency='True' Background='{x:Null}'
        WindowStartupLocation='CenterOwner' ShowInTaskbar='False'>
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="-1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Background='{DynamicResource GlobalPanelBrush}' CornerRadius='8' BorderBrush='{DynamicResource GlobalBorderBrush}' BorderThickness='1.5'>
        <Grid Margin='20'>
            <Grid.RowDefinitions>
                <RowDefinition Height='Auto'/>
                <RowDefinition Height='*'/>
                <RowDefinition Height='Auto'/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Orientation='Horizontal' Grid.Row='0' Margin='0,0,0,15'>
                <TextBlock Name='DialogIcon' Text='&#x26A0;' FontSize='24' VerticalAlignment='Center' Margin='0,0,12,0' Foreground='{DynamicResource GlobalTextBrush}'/>
                <TextBlock Name='DialogTitle' Text='Título del Diálogo' Foreground='{DynamicResource GlobalAccentBrush}' 
                           FontSize='16' FontWeight='Bold' VerticalAlignment='Center'/>
            </StackPanel>

            <!-- Content -->
            <TextBlock Name='DialogMessage' Grid.Row='1' Text='...' 
                       Foreground='{DynamicResource GlobalTextBrush}' FontSize='14' TextWrapping='Wrap' LineHeight='20'/>

            <!-- Buttons -->
            <StackPanel Orientation='Horizontal' Grid.Row='2' HorizontalAlignment='Right' Margin='0,15,0,0'>
                <Button Name='BtnCancel' Content='Cancelar' Width='100' Height='35' Margin='0,0,10,0'
                        Background='{DynamicResource GlobalSecondaryBrush}' Foreground='{DynamicResource GlobalTextBrush}' 
                        Style='{DynamicResource RoundedButtonStyle}' Cursor='Hand'/>
                        
                <Button Name='BtnConfirm' Content='Continuar' Width='100' Height='35' 
                        Background='{DynamicResource GlobalAccentBrush}' Foreground='White' FontWeight='Bold' 
                        Style='{DynamicResource RoundedButtonStyle}' Cursor='Hand'/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

```xml
<Window xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
        Title='Notificación' Height='220' Width='450' 
        WindowStyle='None' AllowsTransparency='False' Background='{DynamicResource GlobalBackgroundBrush}'
        WindowStartupLocation='CenterOwner' ShowInTaskbar='False'>
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Style="{DynamicResource DialogBorderStyle}">
        <!-- Shadows removed to allow native OS rendering -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height='Auto'/> <!-- Header -->
                <RowDefinition Height='*'/>    <!-- Content -->
                <RowDefinition Height='Auto'/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Custom TitleBar for dragging -->
            <Border Name="TitleBar" Grid.Row="0" Background="Transparent" Height="45">
                <StackPanel Orientation='Horizontal' Margin='20,0'>
                    <TextBlock Name='DialogIcon' Text='&#x26A0;' FontSize='22' VerticalAlignment='Center' Margin='0,0,12,0' Foreground='{DynamicResource GlobalTextBrush}'/>
                    <TextBlock Name='DialogTitle' Text='Título del Diálogo' Style='{DynamicResource DialogHeaderStyle}'/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <TextBlock Name='DialogMessage' Grid.Row='1' Text='...' Margin="25,10,25,15"
                       Foreground='{DynamicResource GlobalTextBrush}' FontSize='14' TextWrapping='Wrap' LineHeight='20' Opacity="0.8"/>

            <!-- Footer area with buttons -->
            <Border Grid.Row="2" Style="{DynamicResource DialogFooterStyle}">
                <StackPanel Orientation='Horizontal' HorizontalAlignment='Right'>
                    <Button Name='BtnCancel' Content='Cancelar' Style='{DynamicResource SecondaryButtonStyle}' 
                            Width='100' Margin='0,0,10,0'/>
                            
                    <Button Name='BtnConfirm' Content='Continuar' Style='{DynamicResource RoundedButtonStyle}' 
                            Width='100' Background='{DynamicResource GlobalAccentBrush}' Foreground='White' FontWeight='Bold'/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

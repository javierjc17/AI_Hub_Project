<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entrada" Height="250" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="{x:Null}"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">

    <Border Name="MainBorder" Background="{DynamicResource GlobalPanelBrush}" 
            CornerRadius="15" BorderBrush="{DynamicResource GlobalBorderBrush}" BorderThickness="1.5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.3" Color="{DynamicResource {x:Static Colors.Black}}"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- TitleBar -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Custom TitleBar for dragging -->
            <Border Name="TitleBar" Grid.Row="0" Background="Transparent" Height="40" CornerRadius="15,15,0,0">
                <TextBlock Name="InputTitle" Text="Título" Foreground="{DynamicResource GlobalAccentBrush}" 
                           FontWeight="Bold" VerticalAlignment="Center" Margin="20,0"/>
            </Border>

            <StackPanel Grid.Row="1" Margin="25,10,25,0">
                <TextBlock Name="InputMessage" Text="Ingrese el valor:" Foreground="{DynamicResource GlobalTextBrush}" 
                           TextWrapping="Wrap" Margin="0,0,0,15" FontSize="14"/>
                
                <TextBox Name="InputText" Style="{DynamicResource RoundedTextBoxStyle}" Height="35" 
                         FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <Border Grid.Row="2" Padding="20" Background="{DynamicResource GlobalSecondaryBrush}" CornerRadius="0,0,15,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="BtnCancel" Content="Cancelar" Style="{DynamicResource RoundedButtonStyle}" 
                            Width="100" Margin="0,0,15,0" Background="Transparent" BorderThickness="1" BorderBrush="{DynamicResource GlobalBorderBrush}"/>
                    <Button Name="BtnOk" Content="Aceptar" Style="{DynamicResource RoundedButtonStyle}" 
                            Width="100" Background="{DynamicResource GlobalAccentBrush}" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

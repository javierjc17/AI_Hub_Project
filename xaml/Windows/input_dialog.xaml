<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entrada" Height="250" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="-1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Style="{DynamicResource DialogBorderStyle}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.3" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Custom TitleBar for dragging -->
            <Border Name="TitleBar" Grid.Row="0" Background="Transparent" Height="45">
                <TextBlock Name="InputTitle" Text="Título" Style="{DynamicResource DialogHeaderStyle}" Margin="20,0"/>
            </Border>

            <StackPanel Grid.Row="1" Margin="25,10,25,15">
                <TextBlock Name="InputMessage" Text="Ingrese el valor:" Foreground="{DynamicResource GlobalTextBrush}" 
                           TextWrapping="Wrap" Margin="0,0,0,15" FontSize="14" Opacity="0.8"/>
                
                <TextBox Name="InputText" Style="{DynamicResource RoundedTextBoxStyle}" Height="35" 
                         FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <Border Grid.Row="2" Style="{DynamicResource DialogFooterStyle}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="BtnCancel" Content="Cancelar" Style="{DynamicResource SecondaryButtonStyle}" 
                            Width="100" Margin="0,0,15,0"/>
                    <Button Name="BtnOk" Content="Aceptar" Style="{DynamicResource RoundedButtonStyle}" 
                            Width="100" Background="{DynamicResource GlobalAccentBrush}" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Hub Quick Launcher" Height="400" Width="600"
        WindowStyle="None" ResizeMode="CanResize"
        ShowInTaskbar="False" Topmost="True"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False" Background="{x:Null}">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="-1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- ListBoxItem Style (Fixed Focus) -->
        <Style TargetType="ListBoxItem">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="Border" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true" CornerRadius="4" Margin="2">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource GlobalAccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#33999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Border for Rounded Corners (Radius 8 for consistency) -->
    <Border Background="{DynamicResource GlobalPanelBrush}" 
            BorderBrush="{DynamicResource GlobalBorderBrush}" 
            BorderThickness="1" 
            CornerRadius="8"
            Padding="0">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search Box -->
            <Border Grid.Row="0" CornerRadius="5" Background="{DynamicResource GlobalPanelBrush}" Padding="5"
                    BorderThickness="1" BorderBrush="{DynamicResource GlobalBorderBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍" FontSize="18" Margin="5,0,10,0" VerticalAlignment="Center" Foreground="{DynamicResource GlobalSubTextBrush}"/>
                    <TextBox Grid.Column="1" Name="TxtSearch" FontSize="20" BorderThickness="0" Background="Transparent" 
                             Foreground="{DynamicResource GlobalTextBrush}" VerticalAlignment="Center"
                             CaretBrush="{DynamicResource GlobalTextBrush}"/>
                    <TextBlock Grid.Column="1" Name="PlaceHolderText" Text="Escribe para buscar..." FontSize="20" Foreground="{DynamicResource GlobalSubTextBrush}" 
                               IsHitTestVisible="False" VerticalAlignment="Center" Visibility="Collapsed">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Results List -->
            <ListBox Name="ListResults" Grid.Row="1" Margin="0,10,0,0" 
                     Background="Transparent" BorderThickness="0" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Icon Placeholder (could be image if found) -->
                            <Border Width="32" Height="32" Background="#22888888" CornerRadius="4" Margin="0,0,10,0">
                                <TextBlock Text="🚀" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Visibility="Visible"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="{DynamicResource GlobalTextBrush}"/>
                                <TextBlock Text="{Binding Desc}" FontSize="11" Foreground="{DynamicResource GlobalSubTextBrush}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="{Binding Category}" FontSize="12" Foreground="{DynamicResource GlobalSubTextBrush}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Footer -->
            <Border Grid.Row="2" BorderThickness="0" BorderBrush="{DynamicResource GlobalBorderBrush}" Padding="0,5,0,0">
                <TextBlock Text="[Enter] Abrir   [Esc] Cerrar" HorizontalAlignment="Right" FontSize="10" Foreground="{DynamicResource GlobalSubTextBrush}"/>
            </Border>
        </Grid>
    </Border>
</Window>

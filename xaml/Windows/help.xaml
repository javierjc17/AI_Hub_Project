<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ayuda - AI Hub" Height="500" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="False" Background="{DynamicResource GlobalBackgroundBrush}">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="1" ResizeBorderThickness="0" GlassFrameThickness="-1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
    </Window.Resources>

    <Border Background="{DynamicResource GlobalPanelBrush}" BorderBrush="{DynamicResource GlobalBorderBrush}" BorderThickness="1" CornerRadius="8">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
    
            <!-- Header -->
            <TextBlock Grid.Row="0" Text="&#x1F4D6; Gu&#xED;a de Uso" FontSize="20" FontWeight="Bold" 
                       Foreground="{DynamicResource GlobalAccentBrush}" Margin="0,0,0,15" HorizontalAlignment="Center"/>
    
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Bienvenido a AI Hub" FontWeight="Bold" Foreground="{DynamicResource GlobalTextBrush}" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock Text="Gestiona tus herramientas de IA en un solo lugar." 
                               Foreground="{DynamicResource GlobalSubTextBrush}" TextWrapping="Wrap" Margin="0,0,0,15"/>
    
                    <TextBlock Text="&#x26A1; Uso B&#xE1;sico" FontWeight="Bold" Foreground="{DynamicResource GlobalTextBrush}" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock Text="&#x2022; Clic Izquierdo: Abre la herramienta seleccionada." Foreground="{DynamicResource GlobalSubTextBrush}" Margin="0,0,0,5"/>
                    
                    <TextBlock Text="&#x1F6E0; Administraci&#xF3;n" FontWeight="Bold" Foreground="{DynamicResource GlobalTextBrush}" FontSize="14" Margin="0,15,0,5"/>
                    <TextBlock Text="Desde el men&#xFA; de Configuraci&#xF3;n (&#x2699;) puedes:" Foreground="{DynamicResource GlobalSubTextBrush}" Margin="0,0,0,2"/>
                    <TextBlock Text="&#x2022; Cambiar el color de &#xE9;nfasis y el tema visual." Foreground="{DynamicResource GlobalSubTextBrush}" Margin="0,0,0,2"/>
                    <TextBlock Text="&#x2022; Crear nuevas pesta&#xF1;as y grupos." Foreground="{DynamicResource GlobalSubTextBrush}" Margin="0,0,0,2"/>
                    <TextBlock Text="&#x2022; A&#xF1;adir o Editar herramientas." Foreground="{DynamicResource GlobalSubTextBrush}" Margin="0,0,0,2"/>
                    <TextBlock Text="&#x2022; Reordenar elementos arrastrando y soltando." Foreground="{DynamicResource GlobalSubTextBrush}" Margin="0,0,0,2"/>
                    
                    <TextBlock Text="&#x1F4C1; Exportaci&#xF3;n" FontWeight="Bold" Foreground="{DynamicResource GlobalTextBrush}" FontSize="14" Margin="0,15,0,5"/>
                    <TextBlock Text="Puedes guardar todas tus herramientas como un archivo de marcadores HTML compatible con cualquier navegador usando la opci&#xF3;n 'Exportar a HTML'." 
                               Foreground="{DynamicResource GlobalSubTextBrush}" TextWrapping="Wrap" Margin="0,0,0,5"/>
    
                    <TextBlock Text="Quick Launcher (Barra de B&#xFA;squeda)" FontWeight="Bold" Foreground="{DynamicResource GlobalTextBrush}" FontSize="14" Margin="0,15,0,5"/>
                    <TextBlock Text="Presiona 'Ctrl + Espacio' por defecto para abrir la b&#xFA;squeda flotante. Si este atajo genera conflicto con otra aplicaci&#xF3;n o no funciona, puedes cambiarlo por uno personalizado en el men&#xFA; de Configuraci&#xF3;n." 
                               Foreground="{DynamicResource GlobalSubTextBrush}" TextWrapping="Wrap" Margin="0,0,0,5"/>
    
                    <TextBlock Text="&#x1FA9F; Control de Ventana" FontWeight="Bold" Foreground="{DynamicResource GlobalTextBrush}" FontSize="14" Margin="0,15,0,5"/>
                    <TextBlock Text="&#x2022; Bot&#xF3;n Minimizar (-): Minimiza la aplicaci&#xF3;n a la barra de tareas normalmente." Foreground="{DynamicResource GlobalSubTextBrush}" TextWrapping="Wrap" Margin="0,0,0,2"/>
                    <TextBlock Text="&#x2022; Bot&#xF3;n Cerrar (X): Minimiza a la bandeja del sistema (&#xED;cono en la esquina del reloj) para mantenerse activo en segundo plano." Foreground="{DynamicResource GlobalSubTextBrush}" TextWrapping="Wrap" Margin="0,0,0,2"/>
                    <TextBlock Text="&#x2022; Para salir totalmente: Haz clic derecho en el icono de la bandeja y selecciona 'Salir'." Foreground="{DynamicResource GlobalSubTextBrush}" TextWrapping="Wrap" Margin="0,0,0,2"/>
    
                    <!-- Credits Separator -->
                    <Border Height="1" Background="{DynamicResource GlobalBorderBrush}" Margin="0,20,0,10"/>
    
                    <TextBlock Text="Desarrollado por Javier JC" Foreground="{DynamicResource GlobalAccentBrush}" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                    <TextBlock Text="Proyecto Open Source (Uso Libre)" Foreground="{DynamicResource GlobalSubTextBrush}" FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </StackPanel>
            </ScrollViewer>
    
            <!-- Close Button -->
            <Button Name="BtnCloseHelp" Grid.Row="2" Content="Entendido" 
                    Style="{DynamicResource RoundedButtonStyle}"
                    Background="{DynamicResource GlobalAccentBrush}" Foreground="White"
                    Padding="20,8" Margin="0,15,0,0" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
